<% provide(:title, @player.name) %>

<h3><%= @player.name %> - "<%= @player.moniker %>"</h3>

<div class="span8">
	Position: <%= @player.position.name %>
	<p><%= link_to 'Edit', edit_player_path(@player), class: "btn btn-small btn-warning" %>
	<%= link_to "Delete", @player, method: :delete,data: { confirm: "You sure?" }, class: "btn btn-small btn-danger" %>
	</p>
</div>